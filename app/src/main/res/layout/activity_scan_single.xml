<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:crop="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dg11185.sample.ScanActivity">

    <com.libzxing.zxing.ui.ScannerView
        android:id="@+id/scanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        crop:frame_width="200dp"
        crop:frame_height="200dp"
        crop:centerInHorizontal="true"
        crop:centerInVertical="true"
        crop:scan_double="false"
        />

    <com.dg11185.sample.ScanPaneSingle
        android:id="@+id/pane"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@android:color/white"/>

</RelativeLayout>
